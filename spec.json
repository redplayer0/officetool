{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Assignements Draft Spec",
  "type": "object",
  "required": [
    "draftName",
    "tasks",
    "plan"
  ],
  "properties": {
    "draftName": {
      "type": "string",
      "default": "draft"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "taskName"
        ],
        "properties": {
          "taskName": {
            "type": "string"
          },
          "interops": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "uniqueItems": true
          },
          "minimumRank": {
            "type": "number",
            "minimum": 1,
            "maximum": 10
          },
          "maximumRank": {
            "type": "number",
            "minimum": 1,
            "maximum": 10
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "uniqueItems": true
          }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "plan": {
      "type": "object",
      "required": [
        "startDate",
        "endDate",
        "datesList",
        "tasksConfig"
      ],
      "properties": {
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "datesList": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "date",
              "types"
            ],
            "properties": {
              "date": {
                "type": "string",
                "format": "date"
              },
              "types": {
                "type": "array",
                "items": {
                  "enum": [
                    "holiday",
                    "preholiday",
                    "prepreholiday",
                    "prethreeday",
                    "special",
                    "threeday"
                  ]
                }
              }
            }
          }
        },
        "tasksConfig": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "taskName",
              "defaultCount"
            ],
            "maxProperties": 3,
            "properties": {
              "taskName": {
                "type": "string"
              },
              "defaultCount": {
                "type": "number",
                "minimum": 0,
                "default": 1
              },
              "specificDates": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "date"
                },
                "uniqueItems": true
              },
              "excludedDates": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "date"
                },
                "uniqueItems": true
              }
            }
          }
        },
        "datesConfig": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "taskName"
            ],
            "properties": {
              "startDate": {
                "type": "string",
                "format": "date"
              },
              "endDate": {
                "type": "string",
                "format": "date"
              },
              "datesList": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "date"
                }
              },
              "taskName": {
                "type": "string"
              },
              "countMin": {
                "type": "number",
                "minimum": 1
              },
              "countMax": {
                "type": "number",
                "minimum": 1
              },
              "countExact": {
                "type": "number",
                "minimum": 0
              },
              "isOptional": {
                "type": "boolean",
                "default": false
              },
              "optionalMin": {
                "type": "number",
                "minimum": 0
              },
              "optionalMax": {
                "type": "number",
                "minimum": 0
              }
            },
            "dependencies": {
              "countMax": [
                "countMin"
              ],
              "optionalMin": [
                "isOptional"
              ],
              "optionalMax": [
                "isOptional",
                "optionalMin"
              ],
              "isOptional": [
                "optionalMin"
              ]
            }
          }
        }
      }
    },
    "people": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "rank",
          "possibleTasks",
          "maxTasks",
          "history"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "fatherName": {
            "type": "string"
          },
          "rank": {
            "type": "object",
            "required": [
              "rankName",
              "rankNumber"
            ],
            "properties": {
              "rankName": {
                "type": "string"
              },
              "rankNumber": {
                "type": "number",
                "minimum": 1
              }
            }
          },
          "possibleTasks": {
            "type": "array",
            "items": {
              "type": "string",
              "minItems": 1
            }
          },
          "maxTasks": {
            "type": "number",
            "minimum": 0,
            "maximum": 6
          },
          "minTasks": {
            "type": "number",
            "minimum": 0,
            "maximum": 6
          },
          "exactTasks": {
            "type": "number",
            "minimum": 0,
            "maximum": 6
          },
          "history": {
            "type": "object",
            "properties": {
              "months": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "total": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "normal": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "holiday": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "preholiday": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "prepreholiday": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "prethreeday": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "special": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "threeday": {
                "type": "number",
                "minimum": 0,
                "default": 0
              }
            }
          },
          "parameters": {
            "type": "object",
            "properties": {
              "preferences": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "date",
                    "option"
                  ],
                  "properties": {
                    "date": {
                      "type": "string",
                      "format": "date"
                    },
                    "toDate": {
                      "type": "string",
                      "format": "date"
                    },
                    "option": {
                      "enum": [
                        "duty",
                        "travel",
                        "vacation",
                        "demand",
                        "prefer",
                        "trynot",
                        "not"
                      ]
                    }
                  }
                }
              },
              "preferredDates": {
                "$comment": "TODO validate no overlap between all dates",
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "date",
                    "level"
                  ],
                  "properties": {
                    "date": {
                      "type": "string",
                      "format": "date"
                    },
                    "level": {
                      "type": "number",
                      "minimum": 1,
                      "maximum": 10
                    }
                  }
                }
              },
              "excludedDates": {
                "$comment": "TODO validate no overlap between all dates",
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "date",
                    "level"
                  ],
                  "properties": {
                    "date": {
                      "type": "string",
                      "format": "date"
                    },
                    "level": {
                      "type": "number",
                      "minimum": 1,
                      "maximum": 10
                    }
                  }
                }
              },
              "peopleRelations": {
                "$comment": "TODO validate that preferredPeople exist",
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "firstName",
                    "lastName",
                    "likeFactor"
                  ],
                  "properties": {
                    "firstName": {
                      "type": "string"
                    },
                    "lastName": {
                      "type": "string"
                    },
                    "fatherName": {
                      "type": "string"
                    },
                    "likeFactor": {
                      "type": "number",
                      "minimum": -10,
                      "maximum": 10
                    }
                  }
                }
              },
              "minimumGap": {
                "type": "number",
                "minimum": 1,
                "maximum": 7
              }
            }
          }
        }
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "forbiddenCombinations": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "fatherName": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}